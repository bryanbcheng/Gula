<?xml version="1.0"?>
<recipe>
<title>Ham and Potato Soup</title>
<description>8 People, Side Dish, Served Hot, Goes Great with Salad</description>

<ingredient>
	<name>potatoes</name>
	<quantity>3 1/2</quantity>
	<measurement>cup</measurement>
</ingredient>

<ingredient>
	<name>ham</name>
	<quantity>3/4</quantity>
	<measurement>cup</measurement>
</ingredient>

<ingredient>
	<name>celery</name>
	<quantity>1/3</quantity>
	<measurement>cup</measurement>
</ingredient>

<ingredient>
	<name>onion</name>
	<quantity>1/3</quantity>
	<measurement>cup</measurement>
</ingredient>

<ingredient>
	<name>water</name>
	<quantity>3 1/4</quantity>
	<measurement>cup</measurement>
</ingredient>

<ingredient>
	<name>chicken bouillion granules</name>
	<quantity>2</quantity>
	<measurement>tablespoon</measurement>
</ingredient>

<ingredient>
	<name>salt</name>
	<quantity>1/2</quantity>
	<measurement>teaspoon</measurement>
</ingredient>

<ingredient>
	<name>pepper</name>
	<quantity>1</quantity>
	<measurement>teaspoon</measurement>
</ingredient>

<ingredient>
	<name>butter</name>
	<quantity>5</quantity>
	<measurement>tablespoon</measurement>
</ingredient>

<ingredient>
	<name>all-purpose flour</name>
	<quantity>5</quantity>
	<measurement>tablespoon</measurement>
</ingredient>

<ingredient>
	<name>milk</name>
	<quantity>2</quantity>
	<measurement>cup</measurement>
</ingredient>

<instruction>
	<action>peel, dice</action>
	<ingredient>potatoes</ingredient>
</instruction>

<instruction>
	<action>dice</action>
	<ingredient>ham</ingredient>
</instruction>

<instruction>
	<action>dice</action>
	<ingredient>celery</ingredient>
</instruction>


<instruction>
	<action>chop</action>
	<quality>finely</quality>
	<ingredient>onion</ingredient>
</instruction>

<instruction>
	<action>combine</action>
	<ingredient>potatoes, ham, celery, onion, water</ingredient>
	<location>stockpot</location>
</instruction>

<instruction>
	<action>boil</action>
	<location>stockpot</location>
</instruction>

<instruction>
	<action>cook</action>
	<heat>medium</heat>
	<duration>15</duration>
	<time>minutes</time>
	<location>stockpot</location>
</instruction>

<instruction>
	<action>add,stir</action>
	<ingredient>chicken bouillion granules,salt,pepper</ingredient>
	<location>stockpot</location>
</instruction>

<instruction>
	<action>simmer</action>
	<location>stockpot</location>
</instruction>

<instruction>
	<action>melt</action>
	<ingredient>butter</ingredient>
	<heat>low</heat>
	<location>saucepan</location>
</instruction>

<instruction>
	<action>add, whisk</action>
	<quality>until thick</quality>
	<ingredient>all-purpose flour</ingredient>
	<location>saucepan</location>
</instruction>

<instruction>
	<action>add, stir</action>
	<quality>slowly</quality>
	<ingredient>milk</ingredient>
	<location>saucepan</location>
</instruction>

<instruction>
	<action>stir</action>
	<duration>5</duration>
	<time>minutes</time>
	<location>saucepan</location>
</instruction>

<instruction>
	<action>add, stir</action>
	<ingredient>butter</ingredient>
	<location>stockpot</location>
</instruction>

<instruction>
	<action>heat</action>
	<quality>thoroughly</quality>
	<location>stockpot</location>
</instruction>

</recipe>